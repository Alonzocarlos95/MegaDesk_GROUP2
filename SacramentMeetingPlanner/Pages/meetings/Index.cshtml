@page
@model SacramentMeetingPlanner.Pages.meetings.IndexModel

@{
    ViewData["Title"] = "Index";
}
    <div class="p10px">
        <h1>List of all Meetings</h1>

        <p>
            <a asp-page="Create" class="create-btn"><i class="fas fa-plus"></i> Create New</a>
        </p>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Meeting[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Meeting[0].Presiding)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Meeting[0].Leading)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Meeting)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Presiding)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Leading)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <form method="post" asp-page="Index" asp-page-handler="CreateDocument" style="margin-right:50px">
            <input type="submit" class="create-btn" value="Print this page">
        </form>
    </div>